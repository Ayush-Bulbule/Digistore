<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

  <!-- Line Awesome -->
  <link rel="stylesheet"
    href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">

  <link rel="icon" href="/favicon.ico" type="image/ico" sizes="32x32">


  <link rel="stylesheet" href="/css/app.css">
  <title>DigiStore - A Digital Products Store</title>
</head>

<body>
  <header>
    <div class="container-fluid d-flex flex-column">
      <nav class="navbar navbar-expand-lg navbar-light bg-light px-4">
        <a class="navbar-brand" href="/"><img src="/img/logo.png" alt="" srcset=""
            style="width: 1.8rem; height: 1.8rem;"> DigiStore</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse " id="navbarSupportedContent">
          <form class="d-flex order-sm-1 order-2 ms-auto" action="/search" method="get">
            <input class="form-control me-2" type="search" placeholder="Search Products.." name="searchitem"
              aria-label="Search">
            <button class="btn btn-outline-primary fs-bold" type="submit"><i class="bi bi-search"></i></button>
          </form>
          <ul class="navbar-nav ms-lg-5 mb-2 mb-lg-0 order-sm-2 order-1">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/cart"><span id="cartCounter" class="badge bg-warning">
                  <%= session.cart ? session.cart.totalQty : '' %>
                </span> <i class="bi bi-cart-fill nav-cart"></i></a>
            </li>
            <% if(user) { %>
              <% if(user.role=='admin' ) { %>
                <li class="nav-item">
                  <a class="nav-link text-success" href="/admin/manage">Manage Products</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link text-success" href="/admin/panel">Manage Orders</a>
                </li>
                <%}%>
                  <% if(user.role=='customer' ) { %>
                    <li class="nav-item">
                      <a class="nav-link text-success" href="/customer/orders">My Orders</a>
                    </li>
                    <%}%>
                      <li class="nav-item">
                        <form id="logout" action="/logout" method="POST">
                          <a onclick="document.getElementById('logout').submit()" class="nav-link" href="#">Logout</a>
                        </form>
                      </li>
                      <% } else { %>
                        <li class="nav-item">
                          <a class="nav-link" href="/login">LogIn</a>
                        </li>
                        <li class="nav-item">
                          <a class="nav-link" href="/register">Register</a>
                        </li>
                        <% } %>
          </ul>

        </div>
      </nav>
    </div>
    <div class="container-fluid menu-container">
      <nav class="navbar  navbar-expand-md navbar-custom navbar-dark">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
          aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse mx-auto order-0" id="navbarNav">
          <ul class="navbar-nav menu-categories mx-auto">
            <li class="nav-item">
              <a class="nav-link" href="/">All</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/products/smartphone">Smartphones</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/products/laptop">Laptops</a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="/products/pc"></a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="/products/tablet">Tablets</a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="/products/led">LED</a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="/products/electronics">Electronics</a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="/products/assesories">Accessories</a>
            </li>
          </ul>
        </div>
      </nav>
    </div>
  </header>


  <%- body %>
    <footer>
      <div class="container-fluid m-0 mt-4 p-4 bg-dark text-light">
        <p class="p-0 m-0 text-center">Â©DigiStore - All rights reserved | Developed by AyushBulbule </p>
      </div>
    </footer>

    <script src="/js/app.js"></script>


    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
      crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
