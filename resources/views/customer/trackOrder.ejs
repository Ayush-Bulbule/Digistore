<section>
    <div class="status container">
        <div class="row">
            <div class="status-box col-lg-8 col-sm-8 col-10 mx-auto mt-3 mx-auto">
                <div class="font-bold d-flex flex-row justify-content-between align-items-center mb-12">
                    <h4>Track Delivery Status</h4>
                    <h6>
                        <%= order.id %>
                    </h6>
                    <input id="hiddenInput" type="hidden" value="<%= JSON.stringify(order)%>">
                </div>
                <ul>
                    <li class="status_line fs-4 pb-5 mt-2" data-status="order_placed"><span class="ps-4">Order
                            Placed</span></li>
                    <li class="status_line fs-4 pb-5 mt-2" data-status="confirmed"><span class="ps-4">Order
                            Confimation</span></li>
                    <li class="status_line fs-4 pb-5 mt-2" data-status="prepared"><span class="ps-4">Order
                            Preparation</span></li>
                    <li class="status_line fs-4 pb-5 mt-2" data-status="delivered"><span class="ps-4">Out for
                            delivery</span></li>
                    <li class="status_line fs-4 pb-5 mt-2" data-status="completed" id="last-line"><span
                            class="ps-4">Completed</span></li>
                </ul>
            </div>
        </div>
    </div>
</section>